//遮罩的过渡动画
.mask-enter
  opacity 0
.mask-enter-active
  transition .3s opacity linear
.mask-enter-to
  opacity 1
.mask-leave
  opacity 1
.mask-leave-active
  transition .3s opacity linear
.mask-leave-to
  opacity 0


.contorlRemove-enter
  opacity 0 !important
  transform translateX(48px) rotate(0deg) !important
.contorlRemove-enter-active
  transition .3s all linear !important
.contorlRemove-enter-to
  opacity 1 !important
  transform translateX(0px) rotate(-720deg) !important
.contorlRemove-leave
  opacity 1 !important
  transform translate3d(0,0,0) rotate(-720deg) !important
.contorlRemove-leave-active
  transition .3s all linear !important
.contorlRemove-leave-to
  opacity 0 !important
  transform translate3d(48px,0,0) rotate(0deg) !important 